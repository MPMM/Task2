<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingTop="@dimen/activity_vertical_margin">

	<ImageView
		android:id="@+id/title_list_item_image_view_logo"
		android:layout_width="@dimen/title_list_logoSize"
		android:layout_height="@dimen/title_list_logoSize"
		android:layout_alignParentLeft="true"
		android:paddingRight="10dp"
		android:scaleType="fitCenter"
		android:src="@drawable/replace_m"
		tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry" />

	<TextView
		android:id="@+id/title_list_item_text_view_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/title_list_item_image_view_logo"
		android:textColor="@color/title_list_titleFontColor"
		android:textSize="@dimen/title_list_titleFontSize"
		tools:ignore="RtlHardcoded" />

	<TextView
		android:id="@+id/title_list_item_text_view_descr"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/title_list_item_text_view_title"
		android:layout_toRightOf="@+id/title_list_item_image_view_logo"
		android:textColor="@color/title_list_titleDescriptFontColor"
		android:textSize="@dimen/title_list_descriptFontSize"
		tools:ignore="RtlHardcoded" />
</RelativeLayout>